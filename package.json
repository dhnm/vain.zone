{
  "name": "vain.zone",
  "version": "0.1.0",
  "description": "",
  "main": "production/server/index.js",
  "scripts": {
    "dev": "nodemon server/index.ts",
    "build":
      "NODE_ENV=production next build && tsc --project tsconfig.server.json",
    "heroku-postbuild": "npm run build",
    "start": "NODE_ENV=production node production/server/index.js"
  },
  "keywords": [],
  "author": "Dinh Huy Nhat Minh",
  "license": "ISC",
  "dependencies": {
    "@zeit/next-typescript": "^1.0.0",
    "axios": "^0.18.0",
    "body-parser": "^1.18.2",
    "compression": "^1.7.2",
    "express": "^4.15.2",
    "form-data": "^2.3.2",
    "helmet": "^3.12.0",
    "html2canvas": "^1.0.0-alpha.12",
    "moment": "^2.21.0",
    "mongoose": "^5.0.14",
    "multer": "^1.3.0",
    "next": "^6.0.3",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "semantic-ui-react": "^0.79.0",
    "typescript": "^2.8.1"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/body-parser": "^1.16.8",
    "@types/compression": "0.0.36",
    "@types/express": "^4.11.1",
    "@types/form-data": "^2.2.1",
    "@types/helmet": "0.0.37",
    "@types/mongodb": "^3.0.15",
    "@types/mongoose": "^5.0.10",
    "@types/multer": "^1.3.6",
    "@types/next": "^2.4.7",
    "@types/react": "^16.3.11",
    "@types/styled-jsx": "^2.2.3",
    "babel-eslint": "^8.2.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "nodemon": "^1.12.1",
    "ts-node": "^4.1.0"
  },
  "babel": {
    "presets": ["next/babel", "@zeit/next-typescript/babel"]
  },
  "nodemonConfig": {
    "watch": ["server/**/*.ts", "modules/functions/getData.ts"],
    "execMap": {
      "ts": "ts-node --compilerOptions '{\"module\":\"commonjs\"}'"
    }
  },
  "eslintConfig": {
    "extends": "airbnb",
    "parser": "babel-eslint",
    "rules": {
      "react/no-unescaped-entities": "off",
      "react/no-array-index-key": "off",
      "react/forbid-prop-types": "off",
      "arrow-parens": "off",
      "no-mixed-operators": "off",
      "no-console": "off",
      "wrap-iife": "off",
      "function-paren-newline": "off"
    },
    "globals": {
      "window": true
    }
  }
}
